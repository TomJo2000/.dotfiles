[core]
	pager     = delta
	fsmonitor = true

[user]
	email      = tom@termux.dev
	name       = TomIO
	signingkey = ~/.ssh/keys/external/ed25519_GitHub.pub

[format]
	numbered = auto
	outputDirectory = /tmp/patches

[gpg]
	format = ssh

[help]
	autocorrect = prompt

[log]
	abbrevCommit = 7

[init]
	defaultbranch = main

[branch]
	autosetupmerge  = true
	autosetuprebase = always

[fetch]
	writecommitgraph = true

[commit]
	gpgsign = true
	verbose = true

[push]
	autosetupremote = true

[pull]
	rebase = true

[rebase]
	autosquash = true
	autostash = true
	stat = true

[merge]
	tool = nvimdiff

[mergetool]
	keepBackup = false
	writeToTemp = true

[mergetool "nvimdiff"]
	layout = "(BASE / REMOTE), MERGED"

[alias]
	# Alias functions live in a separate bash script.

	# show the last <n> (1 by default) commits
	news = "!f() { "$HOME/.config/git/aliases.sh" news "$@"; }; f"

	# show information and diffs for staged files with full colorization
	staged = "!f() { "$HOME/.config/git/aliases.sh" staged "$@"; }; f"

	# same as above but for unstaged changes
	unstaged = "!f() { "$HOME/.config/git/aliases.sh" unstaged "$@"; }; f"

	# Show the <n> (20 by default) most edited files
	# Written by Corey Haines
	# Scriptified by Gary Bernhardt
	# Simplified and made extensile by TomIO
	# Example, show the 10 most committed to files in the last month:
	# ~$ git churn 10 --since='1 month ago'
	churn = "!f() { "$HOME/.config/git/aliases.sh" churn "$@"; }; f"

	# fetch one or more GitHub PRs as local branches
	pr-fetch = "!f() { "$HOME/.config/git/pr-fetch.sh" "$@"; }; f"

[include]
	# Delta config
	path = ~/.config/delta.conf

# vim: set ft=gitconfig noet ts=4 sw=4 ff=unix
