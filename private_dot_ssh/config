Host *
    # Multiplexing and general efficiency
    ControlMaster auto
    ControlPath ~/.ssh/mux-%r@%h:%p.socket
    ControlPersist 15m
    Compression yes
    
    # Authentication
    CheckHostIP yes
    HostbasedAuthentication yes
    #    PreferredAuthentications hostbased,publickey,gssapi-with-mic,keyboard-interactive,password
    #    PubkeyAcceptedAlgorithms ssh-ed25519-cert-v01@openssh.com,ecdsa-sha2-nistp256-cert-v01@openssh.com,ecdsa-sha2-nistp384-cert-v01@openssh.com,ecdsa-sha2-nistp521-cert-v01@openssh.com,sk-ssh-ed25519-cert-v01@openssh.com,sk-ecdsa-sha2-nistp256-cert-v01@openssh.com,rsa-sha2-512-cert-v01@openssh.com,rsa-sha2-256-cert-v01@openssh.com,ssh-ed25519,ecdsa-sha2-nistp256,cdsa-sha2-nistp384,ecdsa-sha2-nistp521,sk-ssh-ed25519@openssh.com,sk-ecdsa-sha2-nistp256@openssh.com,rsa-sha2-512,rsa-sha2-256

    # Key management
    AddKeysToAgent ask
    UpdateHostKeys ask
    VisualHostKey yes

# identification file for GitHub
Host GitHub
	Hostname github.com
	    User git
    IdentityFile ~/.ssh/keys/github/rsa-4096_github
 
# ssh access for Termux in home network
Host Termux
    User u0_a294
    Port 8022
    IdentityFile ~/.ssh/keys/personal/rsa-4096_phone
    HostName 192.168.111.3

# Work cluster
Host deb
	Hostname debian-Athlon.lan
	    User tom
    IdentityFile ~/.ssh/keys/work/rsa-4096_deb

Host fedora
	Hostname Fedora.lan
	    User tom
    IdentityFile ~/.ssh/keys/work/rsa-4096_fedora

Host pi
	Hostname AmogOS.lan
	    User pi
    IdentityFile ~/.ssh/keys/work/rsa-4096_pi
