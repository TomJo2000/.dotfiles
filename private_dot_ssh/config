Host *
    # Multiplexing and general efficiency
    ControlMaster auto
    ControlPath ~/.ssh/mux-%r@%h:%p.socket
    ControlPersist 15m
    Compression yes

    #Disable X11 Forwarding by default to speed up connection
    ForwardX11 no

    # Key management
    AddKeysToAgent ask
    UpdateHostKeys ask
    VisualHostKey yes

    # Authentication
    CheckHostIP yes
    HostbasedAuthentication yes


### Identification file for GitHub
Host GitHub
    User git
    Hostname github.com
    IdentityFile ~/.ssh/keys/github/rsa-4096_github


### Home network
# ssh access for Termux in home network
Host Termux
    User u0_a294
    Hostname 192.168.111.3
    Port 8022
    IdentityFile ~/.ssh/keys/personal/rsa-4096_phone

# ssh access to PC in home network
Host PC-Lan
    User Josh
    Hostname 192.168.111.22
    IdentityFile ~/.ssh/keys/personal/rsa-4096_pc

Host PC-WiFi
    User Josh
    Hostname 192.168.111.16
    IdentityFile ~/.ssh/keys/personal/rsa-4096_pc


### Work cluster
Host deb
    User tom
    Hostname debian-Athlon.lan
    IdentityFile ~/.ssh/keys/work/rsa-4096_deb

Host fedora
    User tom
    Hostname Fedora.lan
    IdentityFile ~/.ssh/keys/work/rsa-4096_fedora

Host pi
    User pi
    Hostname AmogOS.lan
    IdentityFile ~/.ssh/keys/work/rsa-4096_pi
