Host *
    # Multiplexing and general efficiency
    ControlMaster auto
    ControlPath ${HOME}/.ssh/mux-%r@%h:%p.socket
    ControlPersist 15m
    Compression yes

    #Disable X11 Forwarding by default to speed up connection
    ForwardX11 no

    #Forward Local Agent
    ForwardAgent ${SSH_AUTH_SOCK}

    # Key management
    AddKeysToAgent yes
    UpdateHostKeys yes
    VisualHostKey yes

    # Authentication
    CheckHostIP yes
    HostbasedAuthentication yes


### Identification file for GitHub
Host GitHub
    User git
    Hostname github.com
    IdentityFile ${HOME}/.ssh/keys/github/rsa-4096_github


### Home network
# ssh access for Termux in home network
Host Termux
    User u0_a294
    Hostname 192.168.111.3
    Port 8022
    IdentityFile ${HOME}/.ssh/keys/personal/rsa-4096_phone

# ssh access to PC in home network
Host PC-Lan
    User Josh
    Hostname 192.168.111.22
    IdentityFile ${HOME}/.ssh/keys/personal/rsa-4096_pc

Host PC-WiFi
    User Josh
    Hostname 192.168.111.16
    IdentityFile ${HOME}/.ssh/keys/personal/rsa-4096_pc


# ssh access to personal Laptop in home network
Host Laptop
    User tom
    Hostname 192.168.111.120
    IdentityFile ${HOME}/.ssh/keys/personal/rsa-4096_laptop

