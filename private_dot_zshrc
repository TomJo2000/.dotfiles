# shellcheck disable=SC2034,SC2148,SC1091
HISTFILE=$HOME/.histfile
HISTSIZE=4000
SAVEHIST=10000
bindkey -e

if [[ -n $SSH_AUTH_SOCK ]] ; then # see if SSH Agent is running
    : # if it is, do nothing
else
    eval "$(ssh-agent)" >> /dev/null # startup the SSH Agent; discard confirmation message
    echo -ne "SSH Agent started\nPID: \e[2;47;35m${SSH_AGENT_PID}\e[0m\n\r"
fi

