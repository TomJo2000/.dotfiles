# set up nvim as default EDITOR and DIFF program.
export EDITOR="nvim"
export DIFFPROG="nvim -d"

set -o vi # enable vi mode

if [[ -e /mnt/c/Users/Josh/Desktop/stuff/VScode/git/.dotfiles/dot_config/private_starship.toml ]]; # if this is my Personal PC, use the working copy of the prompt.
    then export STARSHIP_CONFIG=/mnt/c/Users/Josh/Desktop/stuff/VScode/git/.dotfiles/dot_config/private_starship.toml
fi
eval "$(starship init zsh)" && if (($SHLVL == 1)); [[ -z $ANDROID_ROOT ]] && cat ~/.config/col_banner.ascii; then echo "ðŸš€ Starship Prompt Initialized"; fi || echo "Error: failed to initialize starship prompt" # initilize starship prompt

if [[ -S $TMPDIR/ssh-*/* ]] # see if SSH Agent is running
    then : # if it is, do nothing
else 
    eval $(ssh-agent) >> /dev/null # startup the SSH Agent; discard confirmation message
    echo -ne "SSH Agent started\nPID: \e[2;47;35m${SSH_AGENT_PID}\e[0m\n\r"
fi

alias ls='ls --color=auto' # colorize ls by default

